{
  "manifest_version": 3,
  "name": "LumiWallet",
  "version": "0.1.0",
  "description": "Agent-powered Smart Wallet for Monad",
  "action": {
    "default_title": "LumiWallet"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["storage", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
